extends layout 

block content 

    h1(class="text-3xl text-center ")= topic.name

    div 

        dl(class="flex flex-wrap justify-center my-10 mx-[10vw]")
            each card in topic_cards    
                div(class=" break-all indCards rounded border-4 border-black px-2 py-2 m-3  h-[170px] w-[350px] max-w-[95vw] text-center flex flex-col justify-center ")
                    a(href=card.url class="text-2xl") #{card.card}
                    p Definition: #{card.definition}
                    p(class="text-sm") Status : #{card.status}
            else 
                p There is no cards in this topic
    p(class="rounded border-2 border-black bg-[#fb4d3d] p-5 mx-auto flex justify-center w-[90vw] max-w-[300px] text-xl")
        a(href=topic.url+'/update') Update Topic
    p(class="rounded border-2 border-black bg-[#fb4d3d] p-5  mx-auto flex justify-center w-[90vw] max-w-[300px] text-xl" style="margin-top:10px;")
        a(href=topic.url+'/delete' ) Delete Topic