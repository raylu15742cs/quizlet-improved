extends layout 

block content 
    h1 #{title}

    form(method="POST" action="")
        div.form-group
            label(for="name") Topic: 
            input#name.form-control(type="text", placeholder="Python, JavaScript, Node" name="name" value=(undefined===topic ? '' : topic.name))
            button(type="submit") Submit 
    if errors 
        ul 
            for error in errors 
                li!= error.msg