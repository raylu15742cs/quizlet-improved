extends layout 

block content 
    h1(class="text-6xl text-center ")= title 
    ul(class="flex flex-wrap justify-center my-10 mx-[10vw]") 
        each topic in topic_list 
            li
                div(class=" break-all indCards rounded border-4 border-black px-2 py-2 m-3  h-[170px] w-[90vw] max-w-[600px] text-center flex flex-col justify-center text-4xl")
                    a(href=topic.url) #{topic.name}
        else    
            li There is no topics
    p(class="rounded border-2 border-black bg-[#fb4d3d] p-5 mx-auto flex justify-center w-[90vw] max-w-[300px] text-xl")
        a(href='/catalog/topic/create') Create New Topic